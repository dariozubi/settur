generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                  String  @id @default(cuid())
  type                String
  provider            String
  providerAccountId   String
  refresh_token       String? @db.Text
  access_token        String? @db.Text
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String? @db.Text
  session_state       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              String

  @@unique([provider, providerAccountId])
}

model Session {
  id              String   @id @default(cuid())
  sessionToken    String   @unique
  expires         DateTime

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
}

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  accounts        Account[]
  sessions        Session[]
}

model VerificationToken {
  identifier    String
  token         String   @unique
  expires       DateTime

  @@unique([identifier, token])
}

model Hotel {
  id        Int @id @default(autoincrement())
  name      String
  zone      Zone
  orders    Order[]
}

model Rate {
  id            Int @id @default(autoincrement())
  trip          Trip?
  vehicle       Vehicle?
  zone          Zone?
  additionalId  Additional?
  value         Int
  priceId       String
}

model Order {
  id          Int @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  status      OrderStatus @default(CREATED)
  adults      Int
  children    Int
  infants     Int
  items       Additional[]
  email       String 
  name        String
  surname     String
  phone       String
  transfers   Transfer[]
  prices       String[]
  vehicle     Vehicle
  isEnglish   Boolean
  trip        Trip
  owed        Int
  extras      Int @default(0)
  notes       String @default("")

  hotel       Hotel @relation(fields: [hotelId], references: [id])
  hotelId     Int
}

model Transfer {
  id        Int @id @default(autoincrement())
  flight    String
  date      DateTime
  direction Direction

  order     Order @relation(fields: [orderId], references: [id])
  orderId   Int
  unit      Unit? @relation(fields: [unitId], references: [id])
  unitId    Int?
}
model Admin {
  id      Int @id @default(autoincrement())
  email   String @unique
  role    Role @default(OPERACION)
  name    String @default("novato")
}

model Unit {
  id          Int @id @default(autoincrement())
  label       String @unique
  vehicle     Vehicle
  transfer    Transfer[]
}

model Operator {
  id      Int @id @default(autoincrement())
  name    String @unique
  phone   String
}

model Flag {
  id      String @id
  value   Boolean
}

enum Role {
  ADMIN
  OPERACION
}

enum Additional {
  WHEELCHAIR
  CARSEAT
  BOOSTERSEAT
  SHOPPING
  PETBOX
  KAYAK
  BICYCLE
  SURFTABLE
  RESERVATION
}

enum OrderStatus {
  CREATED
  RESERVED
  PAID
  CANCELLED
  FULFILLED
}

enum Vehicle {
  SPRINTER
  HIACE
  SUBURBAN
  ESCALADE
  COACH
  SHARED
}

enum Direction {
  AIRPORT
  HOTEL
}

enum Trip {
  ROUND
  ONEWAY
}

enum Zone {
  ZONE1
  ZONE2
  ZONE3
  ZONE4
  ZONE5
  ZONE6
  ZONE7
  ZONE8
}